        <property name="show_sql">true</property>
        <mapping class="model.dao.AlteMateriale"/>
        <mapping class="model.dao.Bd"/>
        <mapping resource="persistence.xml"/>
        <mapping class="model.dao.ChestionarFinal"/>
        <mapping class="model.dao.Client"/>
        <mapping class="model.dao.ListaProiecte"/>
        <mapping class="model.dao.Propunere"/>
        <mapping class="model.dao.RaportFinal"/>
        <mapping class="model.dao.User"/>
        <mapping class="model.dao.UserRoles"/>
        <mapping class="model.dao.Roles"/>
        <mapping class="model.dao.Cod1"/>
        <mapping class="model.dao.Cod2"/>
        <mapping class="model.dao.Cod3"/>
        <mapping class="model.dao.EvidentaInventar"/>
        <mapping class="model.dao.Loc"/>
        <mapping class="model.dao.Persoana"/>
        <mapping class="model.dao.Articole"/>

        <!-- DB schema will be updated if needed -->
        <!-- <property name="hbm2ddl.auto">update</property> -->
    </session-factory>
</hibernate-configuration>
